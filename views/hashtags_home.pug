extends layout

block title
  title Hashtag ##{hashtag} - Dgidgi.tal
    
block content
  #login-debut-content 
    h1 Hashtag ##{hashtag}
    .container
      .row
        .col-8.dgidgitalisation-liste
          if posts
            for  post, i in posts
              .dgidgitalisation
                a(href='/users/' + post.userId)
                  img.bebe-avatar(src='/users/' + post.userId + '/avatar')
                  span #{post.userName}
                .dgidgitalisation-contenu
                  div #{post.content}
                  if post.imageId
                    img.img-fluid(src='/images/' + post.imageId, data-toggle='modal', data-target='#modal_' + post.imageId)
                    .modal.fade(tabindex='-1', role='dialog', id='modal_' + post.imageId)
                      .modal-dialog.modal-lg(role='document')
                        .modal-content
                          .modal-body
                            button.close(type='button', data-dismiss='modal', aria-label='Close')
                              span(aria-hidden='true') Ã—
                            img#image.img-fluid(src='/images/' + post.imageId, alt='')
                          .modal-footer
                            div #{post.content}
    hr
