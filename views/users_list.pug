extends layout


block title
  title  Les Dgidgi.taliseurs - Dgidgi.tal

block content
  #login-debut-content 
    h1 Les Dgidgi.taliseurs
    .card-columns.in-black
      if allUsers
        for user,i in allUsers
          .card
            .card-header
              a(href='/users/' + user.userId, style='text-decoration: none;')
                img.card-img-top.maman-avatar(src='/users/' + user.userId + "/avatar", alt=user.userName)
                div.carte-dgidgitaliseur-id-et-nom
                  .carte-dgidgitaliseur-nom #{user.userName}
                  .carte-dgidgitaliseur-id @#{user.userId}
            .card-body
              //h5.card-title Special title treatment
              p.card-text.carte-dgidgitaliseur-description #{user.description}
